@model GlammyStore.Web.Models.PageViewModel

@{
    ViewBag.Title = "Trang " + Model.Name;
    ViewBag.MetaKeyword = Model.MetaKeyword;
    ViewBag.MetaDescription = Model.MetaDescription;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- BREADCRUMBS -->
<section class="breadcrumb parallax margbot30"></section>
<!-- //BREADCRUMBS -->
<!-- PAGE HEADER -->
<section class="page_header">

    <!-- CONTAINER -->
    <div class="container">
        <h3 class="pull-left"><b>@Model.Name</b></h3>

        <div class="pull-right">
            <a href="/">Quay lại trang chủ<i class="fa fa-angle-right"></i></a>
        </div>
    </div><!-- //CONTAINER -->
</section><!-- //PAGE HEADER -->

<div class="post margbot40">
    <div class="container">
        @Html.Raw(Model.Content)
    </div>
</div>
