<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Glammy </title>
    <meta name="keywords" content="@ViewBag.MetaKeyword">
    <meta name="description" content="@ViewBag.MetaDescription">

    <link rel="shortcut icon" href="/Assets/Client/images/favicon.ico">

    <!-- CSS -->
    <link href="/Assets/Client/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="/Assets/Client/css/flexslider.css" rel="stylesheet" type="text/css" />
    <link href="/Assets/Client/css/fancySelect.css" rel="stylesheet" media="screen, projection" />
    <link href="/Assets/Client/css/animate.css" rel="stylesheet" type="text/css" media="all" />
    <link href="/Assets/Client/css/style.css" rel="stylesheet" type="text/css" />

    <!-- FONTS -->
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

</head>
<body>

    <!-- PRELOADER -->
    <div id="preloader"><img src="/Assets/Client/images/preloader.gif" alt="Loading..." /></div>
    <!-- //PRELOADER -->
    <div class="preloader_hide">

        <!-- PAGE -->
        <div id="page">

            <!-- HEADER -->
            @Html.Action("_Header")


            @RenderBody()
            
            <!-- FOOTER -->
            @Html.Action("_Footer")

        </div><!-- //PAGE -->
    </div>

    <!-- TOVAR MODAL CONTENT -->
    <div id="modal-body" class="clearfix">
        <div id="tovar_content"></div>
        <div class="close_block"></div>
    </div><!-- TOVAR MODAL CONTENT -->
    <!-- SCRIPTS -->
    <!--[if IE]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    <!--[if IE]><html class="ie" lang="en"> <![endif]-->

    <script src="/Assets/Client/js/jquery.min.js" type="text/javascript"></script>
    <script src="/Assets/Client/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/Assets/Client/js/jquery.sticky.js" type="text/javascript"></script>
    <script src="/Assets/Client/js/parallax.js" type="text/javascript"></script>
    <script src="/Assets/Client/js/jquery.flexslider-min.js" type="text/javascript"></script>
    <script src="/Assets/Client/js/jquery.jcarousel.js" type="text/javascript"></script>
    <script src="/Assets/Client/js/fancySelect.js"></script>
    <script src="/Assets/Client/js/animate.js" type="text/javascript"></script>
    <script src="/Assets/Client/js/myscript.js" type="text/javascript"></script>
    <script>
		if (top != self) top.location.replace(self.location.href);
    </script>

    @RenderSection("scripts", required: false)

</body>
</html>

