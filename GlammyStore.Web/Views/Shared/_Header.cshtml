@using GlammyStore.Common

<header>
    <!-- TOP INFO -->
    <div class="top_info">
        <!-- CONTAINER -->
        <div class="container clearfix">
            <ul class="secondary_menu">
                @if ( ! Request.IsAuthenticated )
                {
                    <li><a href="/login.html">Tài khoản của tôi</a></li>
                    <li><a href="/register.html">Đăng ký</a></li>
                }
                else
                {
                    using (Html.BeginForm("LogOut", "Account", FormMethod.Post, new { @id = "frmLogOut" }))
                    {
                        @Html.AntiForgeryToken()
                        <li><a href="/tai-khoan.htm">Xin chào: @StringHelper.GetNameByEmail(User.Identity.Name)</a></li>
                        <li><a href="#" id="btnLogOut">Đăng xuất</a></li>
                    }
                }

            </ul>

            <div class="live_chat"><a href="javascript:void(0);"><i class="fa fa-comment-o"></i> Live chat</a></div>

            <div class="phone_top">Bạn cần trợ giúp? <a href="tel:0905296163">090 529 6163</a></div>
        </div><!-- //CONTAINER -->
    </div><!-- TOP INFO -->
    <!-- MENU BLOCK -->
    <div class="menu_block">

        <!-- CONTAINER -->
        <div class="container clearfix">

            <!-- LOGO -->
            <div class="logo">
                <a href="index.html"><img src="/Assets/Client/images/logo.png" alt="" /></a>
            </div><!-- //LOGO -->
            <!-- SEARCH FORM -->
            <div class="top_search_form">
                <a class="top_search_btn" href="javascript:void(0);"><i class="fa fa-search"></i></a>
                <form method="get" action="/search.htm">
                    <input type="search" name="keyword" value="Nhập tên sản phẩm..." onFocus="if (this.value == 'Nhập tên sản phẩm...') this.value = '';" onBlur="if (this.value == '') this.value = 'Nhập tên sản phẩm...';" />
                </form>
            </div><!-- SEARCH FORM -->
            <!-- SHOPPING BAG -->
            <div class="shopping_bag">
                <a class="shopping_bag_btn" href="javascript:void(0);"><i class="fa fa-shopping-cart"></i><p>Giỏ hàng của bạn</p><span class="cart-count">2</span></a>
                <div class="cart">
                    <ul class="cart-items">
                        <li class="clearfix">
                            <img class="cart_item_product" src="/Assets/Client/images/tovar/women/1.jpg" alt="" />
                            <a href="product-page.html" class="cart_item_title">popover sweatshirt in floral jacquard</a>
                            <span class="cart_item_price">1 × $98.00</span>
                        </li>
                        <li class="clearfix">
                            <img class="cart_item_product" src="/Assets/Client/images/tovar/women/3.jpg" alt="" />
                            <a href="product-page.html" class="cart_item_title">japanese indigo denim jacket</a>
                            <span class="cart_item_price">2 × $158.00</span>
                        </li>
                    </ul>
                    <div class="cart_total">
                        <div class="clearfix"><span class="cart_subtotal">Tổng cộng: <b>$414</b></span></div>
                        <a class="btn active" href="/gio-hang.htm">Đặt hàng</a>
                    </div>
                </div>
            </div><!-- //SHOPPING BAG -->
            <!-- LOVE LIST -->
            <div class="love_list">
                <a class="love_list_btn" href="javascript:void(0);"><i class="fa fa-heart-o"></i><p>Yêu thích</p><span class="love-count">0</span></a>
                <div class="cart">
                    <ul class="cart-items">
                        <li>Bạn chưa chọn sp yêu thích nào...</li>
                    </ul>
                    <div class="cart_total">
                        <div class="clearfix"><span class="cart_subtotal">Tạm tính: <b>$0</b></span></div>
                        <a class="btn active" href="checkout.html">Xem tất cả</a>
                    </div>
                </div>
            </div><!-- //LOVE LIST -->
            <!-- MENU -->
            
            <ul class="navmenu center">
                <li class="first @Html.IsSelected("Home","Index")"><a href="/" title="Trang chủ">Trang chủ</a></li>
                <li class="@Html.IsSelected("Home","About")"><a href="/trang-gioi-thieu.htm">Giới thiệu</a></li>
                <li class="sub-menu @Html.IsSelected("Product","Shop")">
                    <a href="/shop.htm">Danh mục sản phẩm</a>
                    <!-- MEGA MENU -->
                    <ul class="mega_menu megamenu_col1 clearfix">
                        <li class="col">
                            <ol>
                                @{Html.RenderAction("_ListCategory", "Home");}
                            </ol>
                        </li>
                    </ul><!-- //MEGA MENU -->
                </li>
                <li class="@Html.IsSelected("Post","Index")"><a href="/bai-viet.htm">Bài viết</a></li>
                <li class="last @Html.IsSelected("Home", "Contact")"><a href="/contact.htm">Liên hệ</a></li>
            </ul><!-- //MENU -->
        </div><!-- //MENU BLOCK -->
    </div><!-- //CONTAINER -->
</header><!-- //HEADER -->